# === ALB Ingress Controller IRSA Role ===
resource "aws_iam_role" "alb_ingress" {
  name = "alb-ingress-controller-role"

  assume_role_policy = jsonencode({
    Version = "2012-10-17",
    Statement = [
      {
        Effect = "Allow",
        Principal = {
          Federated = var.oidc_provider_arn
        },
        Action = "sts:AssumeRoleWithWebIdentity",
        Condition = {
          StringEquals = {
            "${replace(var.oidc_provider_url, "https://", "")}:sub" = "system:serviceaccount:kube-system:alb-ingress-sa"
          }
        }
      }
    ]
  })
}


resource "aws_iam_role_policy" "alb_ingress_policy" {
  name = "alb-ingress-permissions"
